[color]
    ui = true
[alias]
    st = status
    co = checkout
    ls = ls-files
    sb = show-branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ci = commit
    br = branch
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
    #hist = log --pretty=format:'%Cred%h%Creset %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[merge]
    tool = opendiff
[core]
    excludesfile = ~/.gitignore_global
    editor = vim

